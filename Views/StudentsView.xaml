<UserControl x:Class="AttendanceApp.Views.StudentsView">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="NameBox" Width="200" PlaceholderText="Student Name"/>
            <Button Content="Add" Click="Add_Click" Margin="10,0"/>
        </StackPanel>
        <DataGrid x:Name="StudentGrid" AutoGenerateColumns="True" Height="300"/>
    </StackPanel>
</UserControl>
